<Window x:Class="M_ToDoList.Views.ShellView"
        xmlns:views="clr-namespace:M_ToDoList.Views"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:model="clr-namespace:M_ToDoList.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{x:Type model:ShellViewModel}"
        Background="Gray"
        Title="ShellView" Height="500" Width="830">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="400"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <ContentControl x:Name="TaskView" Grid.Column="0" Grid.Row="1"/>
        <ContentControl x:Name="ListView" Grid.Column="1" Grid.Row="1"/>
        <ContentControl x:Name="CalendarView" Grid.Column="2" Grid.Row="1"/>
    </Grid>
</Window>
